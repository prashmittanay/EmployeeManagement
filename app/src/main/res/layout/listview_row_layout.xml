<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_employeeID"
        android:layout_width="111dp"
        android:layout_height="36dp"
        android:text="demo"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/text_employeeDepartment"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_employeeName"
        android:layout_width="136dp"
        android:layout_height="32dp"
        android:text="demo"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_employeeDepartment"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/text_employeeDepartment"
        android:layout_width="143dp"
        android:layout_height="34dp"
        android:text="demo"
        android:textColor="#000"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>